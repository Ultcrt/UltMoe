{
  "name": "ultmoe",
  "version": "1.0.0",
  "description": " A subscription manager and downloader for dmhy based on Electron / 一个基于Electron的DMHY订阅器与下载器",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ultcrt/UltMoe.git"
  },
  "keywords": [
    "Electron"
  ],
  "author": "Ultcrt",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Ultcrt/UltMoe/issues"
  },
  "homepage": "https://github.com/Ultcrt/UltMoe#readme",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "electron": "^18.0.4"
  },
  "dependencies": {
    "axios": "^0.26.1",
    "cheerio": "^1.0.0-rc.10",
    "electron-squirrel-startup": "^1.0.0",
    "node-schedule": "^2.1.0",
    "webtorrent": "^1.8.13"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "ultmoe",
        "icon": "./assets/UltMoe.png"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "ultmoe"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "name": "ultmoe"
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
